<div class="container">

  <div class="container" style="position: absolute;">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(1,1,1,0.3), rgba(1,1,1,0.3)),
          url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">Category</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p>Very cool stuff, useful and smart</p>
          </div>
          <%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
      <% end %>
    </div>
    <br>
  </div>

</div>
